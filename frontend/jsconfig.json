{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "strict": true
  },
  "vueCompilerOptions": {
    "globalTypesPath": "./src/types/vue-global.d.ts"
  },
  "include": [
    "src/**/*.vue", 
    "src/**/*.js", 
    "src/**/*.ts", 
    "src/**/*.d.ts",
    "src/**/*.scss",
    "src/**/*.css"
  ],
  "exclude": ["node_modules", "dist"]
}